{
  "manifest_version": 3,
  "name": "YouTube Summary",
  "version": "1.0.0",
  "description": "Summarize YouTube videos, webpages, and PDFs using Google AI Studio or Perplexity",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://aistudio.google.com/*",
    "https://www.youtube.com/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://grok.com/*",
    "https://www.grok.com/*",
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://aistudio.google.com/*"],
      "js": ["ai_studio_content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.perplexity.ai/*", 
        "*://perplexity.ai/*"
      ],
      "js": ["perplexity_content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.grok.com/*",
        "*://grok.com/*"
      ],
      "js": ["grok_content.js"],
      "run_at": "document_idle"
    }
  ]
} 