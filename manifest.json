{
  "manifest_version": 3,
  "name": "Cindra Summary",
  "version": "1.0.0",
  "description": "Summarize YouTube, Reddit, and webpages instantly using top AI models like GPT-4o, Claude, Gemini, and more!",
  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://aistudio.google.com/*",
    "https://www.youtube.com/*",
    "https://perplexity.ai/*",
    "https://*.perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chat.com/*",
    "https://grok.com/*",
    "https://gemini.google.com/app/*",
    "*://*/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "ui/options/options.html",
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js"]
    },
    {
      "matches": ["*://aistudio.google.com/*"],
      "js": ["content_scripts/ai_studio_content.js"]
    },
    {
      "matches": ["*://*.perplexity.ai/*"],
      "js": ["content_scripts/perplexity_content.js"]
    },
    {
      "matches": ["*://grok.com/*"],
      "js": ["content_scripts/grok_content.js"]
    },
    {
      "matches": ["*://claude.ai/*"],
      "js": ["content_scripts/claude_content.js"]
    },
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*", "*://chat.com/*"],
      "js": ["content_scripts/chatgpt_content.js"]
    },
    {
      "matches": ["https://gemini.google.com/app/*"],
      "js": ["content_scripts/gemini_content.js"]
    },
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content_scripts/youtube_content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content_scripts/reddit_content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 